<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.ConversorUnidades" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="android:fontFamily">@font/rubik_regular</item>
    </style>

    <style name="Theme.ConversorUnidades" parent="Base.Theme.ConversorUnidades" />

    <!-- SPLASH SCREEN-->
    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/light_background</item>
        <item name="windowSplashScreenAnimatedIcon">@mipmap/logo_santy</item>
        <item name="windowSplashScreenAnimationDuration">300</item>
        <item name="postSplashScreenTheme">@style/Base.Theme.ConversorUnidades</item>
    </style>

    <!-- Light Mode -->
    <style name="SCREEN">
        <item name="android:background">@color/light_background</item>
    </style>
    <style name="TEXT">
        <item name="android:textColor">@color/light_btn</item>
    </style>
    <style name="IMAGEBUTTON">
        <item name="android:background">@color/light_background</item>
        <item name="android:tint">@color/light_btn</item>
    </style>
    <style name="MAINCARD">
        <item name="android:background">@drawable/containt_shape_1</item>
    </style>
    <style name="BUTTON">
        <item name="android:background">@drawable/btn_shape_1</item>
    </style>
    <style name="CARD">
        <item name="android:backgroundTint">@color/light_primary</item>
    </style>
    <style name="TEXT_DARK">
        <item name="android:textColor">@color/light_btn</item>
        <item name="android:textColorHint">@color/light_btn</item>
    </style>
</resources>
